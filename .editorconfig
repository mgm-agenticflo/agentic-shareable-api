# Root EditorConfig file
root = true

# Apply to all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

# Apply to JavaScript, TypeScript, JSON, and other code files
[*.{js,ts,jsx,tsx,json,md}]
max_line_length = 80
quote_type = single
trim_trailing_whitespace = true
insert_final_newline = true

# Apply to Markdown files
[*.md]
prose_wrap = always

# Apply to JSON files (Prettier does not enforce trailing commas)
[*.json]
trailing_comma = none
