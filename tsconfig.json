{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node", "aws-lambda"],
    "noEmit": true
  },
  "include": ["src/**/*", ".eslintrc.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
